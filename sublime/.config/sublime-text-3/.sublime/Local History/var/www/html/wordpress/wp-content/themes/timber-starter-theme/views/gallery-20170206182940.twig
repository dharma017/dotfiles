{% extends "base.twig" %}

{% block content %}

        {% include 'components/inner-slider.twig' %}

        <div class="col1-layout fleft overFlowed gallery">
            <div class="container">
                {% include 'components/resort-gallery-overview.twig' %}
                <div class="row resort-paginate">
                    <div class="col-xs-12">
                      <div class="tool-pagination" id="paginationWrapper">

                        <ul class="pages">
                            <li>
                                {% if pagination.prev %}
                                    <a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
                                {% endif %}
                            </li>
                            {% for page in pagination.pages %}
                                <li>
                                    {% if page.link %}
                                        <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
                                    {% else %}
                                        <span class="{{page.class}}">{{page.title}}</span>
                                    {% endif %}
                                </li>
                            {% endfor %}
                            <li>
                                {% if pagination.next %}
                                    <a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                    </div>
                </div>
            </div>
        </div>
   
    {# {% include 'components/quicklinks.twig' %} #}
    {% include 'components/chooseUs.twig' %}

{% endblock %}
