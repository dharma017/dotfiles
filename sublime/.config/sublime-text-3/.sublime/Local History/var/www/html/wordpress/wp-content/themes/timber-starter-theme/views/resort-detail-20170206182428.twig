{% extends "base.twig" %}

{% block content %}

    {% include 'components/inner-slider.twig' %}

    <div class="col1-layout fleft overFlowed overFlowedAlternative">
        <div class="container">
            <div class="fullwidth fleft resortDetailWrapper resortTypeDetails">
                {% include 'components/resort-main-text.twig' %}
</div>
            <div class="col70 fright resortDetailWrapper hide">
                {# {% include 'components/resort-main-text.twig' %} #}

            </div>
            <div class="col30 fleft hide">
                

                <div class="chooseTypes">
                    <div class="typesFrom">
                       {#  <img src="http://www.abodeparadise.com/beta/image.php?src=http://www.abodeparadise.com/system/photos/package_images/112524Ara Iru Restaurant.jpg&h=480&w=680&zc=1" alt="4 Nights Booking Package" class="img-responsive">
