                        <h3 class="fullwidth fleft hasMargin">HOLIDAY TYPES</h3>
                        <ul>
                            {% for item in holiday_types %}
                            <li>
                                <a href="{{ item.link }}">{{ item.title }}</a>
                            </li>
                            {% endfor %}
                        </ul>

                        <h3 class="fullwidth fleft hasMargin">ROOM TYPES</h3>
                        <ul>
                            {% for item in room_types %}
                            <li>
                                <a href="{{ item.link }}">{{ item.title }}</a>
                            </li>
                            {% endfor %}
                        </ul>

                        <h3 class="fullwidth fleft hasMargin">Special Offers</h3>
                        <ul>
                            {% for item in special_offers %}
                            <li>
                                <a href="{{ item.link }}">{{ item.title }}</a>
                            </li>
