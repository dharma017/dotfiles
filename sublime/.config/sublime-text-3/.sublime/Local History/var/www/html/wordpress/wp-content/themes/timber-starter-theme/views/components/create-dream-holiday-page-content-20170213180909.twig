<div class="content-wrapper fullwidth fleft">
    <div class="col2-right-layout page">

    <div class="col-main">
        
        <div class="entry-page fullwidth fleft">
            
            {% include 'components/form-response.twig' %}

            
            <form id="book-form" action="{{ site.url }}/create-your-dream-holidays" method="post" class="wpcf7-form" novalidate="novalidate">

            {{ function('wp_nonce_field','create-dream-holiday','pf_created') }}

            <div class="formWrapper fullwidth fleft">
                <h4>Budget</h4>
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <select id="tmt-select-budget" name="tmt-select-budget" class="required">
                            <option value="">Select Budget</option>
                            <option value="1000-2000 per person">1000-2000 per person</option>
                            <option value="2000-3000 per person">2000-3000 per person</option>
                            <option value="4000-5000 per person">4000-5000 per person</option>
                            <option value="above 5000 per person">above 5000 per person</option>
                            <option value="Does not matter">Does not matter</option>
                        </select>
                    </div>
                </div>
            </div>

            
            <div class="formWrapper fullwidth fleft marTop">
                <h4>Guest Information</h4>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <input type="text" name="tmt-full-name" id="tmt-full-name-id" class="required tmt-full-name-cls" placeholder="Full Name">
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <input type="email" name="tmt-email" class="required tmt-email" placeholder="E-mail">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <input type="text" name="tmt-phone-number" class="required tmt-phone-number" placeholder="Phone Number">
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <select class="required" name="tmt-select-country">
                                <option value="">Select Country</option>
                            {% for key,country in countries %}
                                <option value="{{ country }}">{{ country }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="formWrapper fullwidth fleft">
                <h4>Travel Requirements</h4>

                <div class="row">
     
                    <div class="col-xs-12 col-sm-6">
                    <div class="datepickers fleft">
                       <label>&nbsp;</label>
                            <input type="text" name="tmt-arrival-date" value="{{ request.arrival_date | date('Y-m-d') }}" placeholder="ARRIVAL DATE" class="datepicker form-control">
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6">
                        <input type="number" name="tmt-no-nights" value="{{ request.nights }}" placeholder="Number of nights" class="">
                    </div>

                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <input type="number" name="tmt-no-adult" value="{{ request.adults }}" min="1" max="100" placeholder="Number of adult" class="">
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <input type="number" name="tmt-no-children" value="{{ request.children }}" min="1" max="100" placeholder="Number of children" class="">
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <input type="number" name="tmt-no-infants" value="{{ request.infant }}" min="1" max="100" placeholder="Number of infants" class="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <input type="number" name="tmt-no-rooms" value="{{ request.rooms }}" min="1" max="100" placeholder="Number of rooms" class="">
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <select id="tmt-select-room" name="tmt-select-resort-type" class="required"> 
                                <option value="">Resort Type</option>
                                     {% for key,value in resort_types %}
                                    <option value="{{ value }}">{{ value }}</option>
                                {% endfor %}
                         </select>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <select id="tmt-select-meal-plan" name="tmt-select-meal-plan" class="required">
                            <option value="">Select Meal Plan</option>
                            {% for key,value in meal_plan %}
                                <option value="{{ value }}">{{ value }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <textarea name="tmt-special-request" placeholder="Special Request"></textarea>
                    </div>
                </div>
            </div>
            <div class="formWrapper fullwidth fleft">
                
                <h4>Payment method</h4>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">

                        <span class="wpcf7-form-control-wrap tmt-tenant-method">

                            <span class="wpcf7-form-control wpcf7-radio"><span class="wpcf7-list-item first"><input type="radio" name="tmt-tenant-method" value="Bank transfer" checked="checked">&nbsp;<span class="wpcf7-list-item-label">Bank transfer</span></span><span class="wpcf7-list-item last">

                            <input type="radio" name="tmt-tenant-method" value="Online by credit card">&nbsp;<span class="wpcf7-list-item-label">Online by credit card</span></span></span>
                        </span>

                    </div>
                </div>
                
                <div class="fullwidth fleft">
                    <!-- <div class="g-recaptcha" data-sitekey="6LeFfA4UAAAAAGn1O5cHhPyr8RK6iKk0s3Mqxn8H"></div> -->
                    <div class="g-recaptcha" data-sitekey="6LfG9CgTAAAAANqzFQT1QpRR7azXTcYK_j2HfcUb"></div>
                </div>
            </div>

            <div class="fullwidth fleft marTop">
                <input type="submit" name="submit" value="Send Request" class="wpcf7-form-control wpcf7-submit">
            </div>
            </form>
        </div>

    </div>
</div>
    
</div>  <!-- /content-wrapper -->

<script type="text/javascript" src="{{ site.theme.link }}/assets/jquery-validation-1.15.0/dist/jquery.validate.min.js"></script>
<script>
$("#book-form").validate();
</script>